{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "<all_urls>","webNavigation",
    "activeTab",
        "contextMenus",
        "clipboardWrite", "webRequestFilterResponse"
  ],

  "web_accessible_resources": [
    "a.jpg"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["*://*.nadlan.taxes.gov.il/*"],
      "js": ["jquery.js", "main.js"]
    }
  ]

}
